<Window x:Class="Projekt_PBD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Projekt_PBD"
        mc:Ignorable="d"
        Title="MainWindow" Height="192.125" Width="316">
    <Grid Margin="0,0,2,-21">
        <Label x:Name="lblLogin" Content="Login" HorizontalAlignment="Left" Margin="28,25,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblHaslo" Content="Hasło" HorizontalAlignment="Left" Margin="28,56,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtLogin" HorizontalAlignment="Left" Height="23" Margin="87,29,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="180"/>
        <Button x:Name="btnZaloguj" Content="Zaloguj" HorizontalAlignment="Left" Margin="87,101,0,0" VerticalAlignment="Top" Width="75" Click="btnZaloguj_Click"/>
        <PasswordBox x:Name="txtHaslo" HorizontalAlignment="Left" Margin="87,60,0,0" VerticalAlignment="Top" Width="180" Height="22"/>
        <Button x:Name="btnZarejestruj" Content="Zarejestruj się" HorizontalAlignment="Left" Margin="167,101,0,0" VerticalAlignment="Top" Width="100" Click="btnZarejestruj_Click"/>

    </Grid>
</Window>
